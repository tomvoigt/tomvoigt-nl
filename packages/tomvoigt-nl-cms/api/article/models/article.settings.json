{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "headline": {
      "type": "string",
      "required": true
    },
    "lead": {
      "type": "text",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "headline",
      "required": true
    },
    "category": {
      "via": "articles",
      "model": "category"
    },
    "author": {
      "via": "articles",
      "model": "author"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": true
    }
  }
}
